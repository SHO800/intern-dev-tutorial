{
	"imports": {
		"@std/http": "jsr:@std/http@^1.0.17",
        "@std/assert": "jsr:@std/assert"
	},
	"tasks": {
		"start": "deno run --watch --allow-net --allow-read server.js"
	},
	"compilerOptions": {
		"lib": [
			"deno.window"
		]
	},
	"lint": {
		"include": [
			"./**/*.js",
			"./**/*.ts",
			"./**/*.jsx",
			"./**/*.tsx"
		],
		"rules": {
			"tags": [
				"recommended"
			],
			"include": [
				"ban-untagged-todo"
			],
			"exclude": [
				"no-unused-vars"
			]
		}
	},
	"fmt": {
		"useTabs": true, 
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": [
          "./**/*.js",
          "./**/*.ts",
          "./**/*.jsx",
          "./**/*.tsx"
		]
	},
	"test": {
		"include": [
			"./**/*.test.js"
		]
	}
}